<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Lesson Type Badge -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/lessonTypeBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/text_lesson"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="@color/rk_primary_blue"
                    app:chipIcon="@drawable/ic_text_lesson"
                    app:chipIconTint="@android:color/white" />

                <!-- Lesson Title -->
                <TextView
                    android:id="@+id/lessonTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="Key Innovation Concepts" />

                <!-- Lesson Description -->
                <TextView
                    android:id="@+id/lessonDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    tools:text="Quick review of the main innovation principles discussed in the video" />

                <!-- Reading Time and Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/readingTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:textColor="#888888"
                        android:textSize="14sp"
                        app:drawableStartCompat="@drawable/ic_clock"
                        tools:text="3 min read" />

                    <!-- Completion Status -->
                    <ImageView
                        android:id="@+id/completionStatus"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_checkmark_empty"
                        android:alpha="0.5"
                        android:contentDescription="Completion status" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Content Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Text Content -->
                <TextView
                    android:id="@+id/textContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textIsSelectable="true"
                    tools:text="Sample text content for the lesson..." />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Mark as Complete Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/markCompletedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/mark_completed"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/rk_primary_blue"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_checkmark_filled"
                app:iconTint="@android:color/white" />

            <!-- Next Lesson Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextLessonButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Next Lesson"
                android:textColor="@color/rk_primary_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_arrow_forward"
                app:iconTint="@color/rk_primary_blue"
                app:strokeColor="@color/rk_primary_blue"
                app:strokeWidth="2dp" />

        </LinearLayout>

        <!-- Progress Indicator -->
        <LinearLayout
            android:id="@+id/progressIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/rk_very_light_blue"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp"
            android:visibility="gone"
            app:cornerRadius="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_checkmark_filled"
                app:tint="@color/rk_success_blue" />

            <TextView
                android:id="@+id/progressMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_lesson_completed"
                android:textColor="@color/rk_primary_blue"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>