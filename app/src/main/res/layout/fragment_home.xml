<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Welcome Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/welcomeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nav_header_title"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/rk_text_dark"
                android:gravity="center" />

            <TextView
                android:id="@+id/welcomeSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/welcome_message"
                android:textSize="16sp"
                android:textColor="@color/rk_text_medium"
                android:gravity="center" />

        </LinearLayout>

        <!-- Streak & Continue Learning Section -->
        <LinearLayout
            android:id="@+id/continueSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <!-- Streak Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Learning Streak"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/rk_text_dark" />

                <TextView
                    android:id="@+id/streakCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/rk_light_blue"
                    tools:text="7 days" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/continue_learning"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/rk_text_dark"
                android:layout_marginBottom="12dp" />

            <!-- Last Watched Lesson Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/lastLessonCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/rk_primary_blue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lastLessonTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            tools:text="Continue: Market Research" />

                        <TextView
                            android:id="@+id/lastLessonModule"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:alpha="0.8"
                            tools:text="New Product Development" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/continueButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="12dp"
                        android:text="Continue"
                        android:textColor="@color/rk_primary_blue"
                        app:backgroundTint="@android:color/white"
                        app:cornerRadius="18dp"
                        style="@style/Widget.Material3.Button.UnelevatedButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Learning Modules Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/explore_modules"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/rk_text_dark"
                android:layout_marginBottom="12dp" />

            <!-- Learning Modules RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/modulesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_learning_module" />

        </LinearLayout>

        <!-- Progress Overview -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Progress"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/rk_text_dark"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/totalProgressText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/rk_primary_blue"
                            tools:text="12/25" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lessons Completed"
                            android:textSize="14sp"
                            android:textColor="@color/rk_text_medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/streakText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/rk_light_blue"
                            android:gravity="center"
                            tools:text="7 days" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Learning Streak"
                            android:textSize="14sp"
                            android:textColor="@color/rk_text_medium"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>